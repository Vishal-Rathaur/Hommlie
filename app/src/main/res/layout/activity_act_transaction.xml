<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActTransaction">

    <androidx.cardview.widget.CardView
        android:id="@+id/rlCard"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rlToolBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            >

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:padding="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/Blackcolor" />

            <TextView
                android:id="@+id/tvviewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="All Transactions"
                android:textAllCaps="false"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                android:textColor="@color/Blackcolor"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingPrefix" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/rlCard"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginEnd="@dimen/_11sdp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/gray_line_color"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textSize="13sp"
                android:textColor="@color/home_header"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:paddingStart="@dimen/_13sdp"
                android:paddingEnd="@dimen/_13sdp"/>
        </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_credited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credited"
                    android:textSize="13sp"
                    android:textColor="@color/home_header"
                    android:fontFamily="@font/plusjakartasans_semi_bold"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingStart="@dimen/_13sdp"
                    android:paddingEnd="@dimen/_13sdp"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_debited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debited"
                    android:textSize="13sp"
                    android:textColor="@color/home_header"
                    android:fontFamily="@font/plusjakartasans_semi_bold"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingStart="@dimen/_13sdp"
                    android:paddingEnd="@dimen/_13sdp"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <View
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="4.2dp"
            app:layout_constraintTop_toBottomOf="@id/ll1"
            app:tabIndicatorColor="@color/home_header"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/top_round_slide_indicator" />
        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/gray_line_color"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recenttrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view1"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginEnd="@dimen/_11sdp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>