    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlToolBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/activityBgColor">

        <ImageView
            android:id="@+id/ivheart"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_bag"
            android:background="@drawable/ic_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivnotification"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.545"
            android:padding="4dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search"
            android:background="@drawable/ic_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivnotification"
            app:layout_constraintHorizontal_bias="0.80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571"
            android:padding="4dp"
            android:visibility="gone"/>

        <com.hommlie.customfonts.MyTextView_SemiBold
            android:layout_width="wrap_content"
            android:id="@+id/tvHome"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/Blackcolor"
            android:textSize="25sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/plusjakartasans_bold"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:src="@drawable/hommlie_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rlCountnotification"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:elevation="@dimen/_3sdp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2">

            <com.hommlie.customfonts.MyTextView_Regular
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ivnotification"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/ic_bg"
            android:src="@drawable/ic_noti"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="@dimen/_6sdp"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/rlToolBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="@dimen/_14sdp"
            >

            <ImageView
                android:id="@+id/iv_verify"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_newright"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_20sdp"/>
            <ImageView
                android:src="@drawable/ic_greencirclelarge"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/iv_verify"
                app:layout_constraintBottom_toTopOf="@id/iv_verify"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_greencirclesmall"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toEndOf="@id/iv_verify"
                app:layout_constraintBottom_toTopOf="@id/iv_verify"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_greencirclesmall"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/iv_verify"
                app:layout_constraintBottom_toBottomOf="@id/iv_verify"
                android:layout_height="wrap_content"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/iv_show_reviewBooking"
                app:lottie_autoPlay="false"
                app:lottie_fileName="booking_success.json"
                app:lottie_speed="1"
                app:lottie_loop="true"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tv_addtoCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Successful"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                android:textColor="@color/color_1F2937"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_verify"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tv_show_addtocart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                android:textColor="@color/color_1F2937"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_addtoCart"
                android:layout_marginTop="@dimen/_15sdp"
                />

            <TextView
                android:id="@+id/tv_show_reviewBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review Booking"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                android:textColor="@color/color_1F2937"
                app:layout_constraintStart_toEndOf="@id/tv_show_addtocart"
                app:layout_constraintEnd_toStartOf="@id/tv_show_bookingsuccessful"
                app:layout_constraintTop_toBottomOf="@id/tv_addtoCart"
                android:layout_marginTop="@dimen/_15sdp"
                />

            <TextView
                android:id="@+id/tv_show_bookingsuccessful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Successful"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                android:textColor="@color/color_1F2937"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_addtoCart"
                android:layout_marginTop="@dimen/_15sdp"
                />

            <ImageView
                android:id="@+id/iv_show_addtocart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="@id/tv_show_addtocart"
                app:layout_constraintEnd_toEndOf="@id/tv_show_addtocart"
                app:layout_constraintTop_toBottomOf="@id/tv_show_addtocart"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_circle"/>

            <ImageView
                android:id="@+id/iv_show_reviewBooking"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="@id/tv_show_reviewBooking"
                app:layout_constraintEnd_toEndOf="@id/tv_show_reviewBooking"
                app:layout_constraintTop_toBottomOf="@id/tv_show_reviewBooking"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_circle"/>

            <ImageView
                android:id="@+id/iv_show_bookingsuccessful"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="@id/tv_show_bookingsuccessful"
                app:layout_constraintEnd_toEndOf="@id/tv_show_bookingsuccessful"
                app:layout_constraintTop_toBottomOf="@id/tv_show_bookingsuccessful"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_circle"/>

            <View
                android:id="@+id/line_between_cartReview"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="@id/iv_show_addtocart"
                app:layout_constraintBottom_toBottomOf="@id/iv_show_addtocart"
                app:layout_constraintStart_toEndOf="@id/iv_show_addtocart"
                app:layout_constraintEnd_toStartOf="@id/iv_show_reviewBooking"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@color/color_10847E"/>

            <View
                android:id="@+id/line_between_reviewBookingSuccessful"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="@id/iv_show_addtocart"
                app:layout_constraintBottom_toBottomOf="@id/iv_show_addtocart"
                app:layout_constraintStart_toEndOf="@id/iv_show_reviewBooking"
                app:layout_constraintEnd_toStartOf="@id/iv_show_bookingsuccessful"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@color/color_10847E"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/account_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/iv_show_addtocart"
                android:layout_marginTop="@dimen/_20sdp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:background="@drawable/transparent_back_5sdp"
                    >
                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Order ID: 2733"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        />
                    <TextView
                        android:id="@+id/tv_trackOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Track Order"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:background="@drawable/coupon_background_design"
                        android:backgroundTint="@color/color249370"
                        android:fontFamily="@font/plusjakartasans_semi_bold"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:visibility="gone"
                        android:paddingBottom="@dimen/_4sdp"
                        />

                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_account"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Dear customer, thank you so much for your order, Very soon our professional will contact you"
                        android:textColor="#66000000"
                        android:textSize="@dimen/_9ssp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/plussakartasans_medium"
                        />

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_message"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Total Cost"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/plusjakartasans_semi_bold"
                        />
                    <TextView
                        android:id="@+id/tv_totalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_message"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="\u20B9342.90"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/plusjakartasans_semi_bold"
                        />
                    <View
                        android:id="@+id/view_line"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_total"
                        android:background="@drawable/dash_line"
                        android:layout_marginTop="@dimen/_8sdp"/>
                    <TextView
                        android:id="@+id/tv_sechedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/view_line"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Schedule Date and Time"
                        android:textColor="#66000000"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/plussakartasans_medium"
                        />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_sechedule"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="2024-05-23"
                        android:textColor="#66000000"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/plussakartasans_medium"
                        />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_date"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="4:00 PM - 6:00 PM"
                        android:textColor="#66000000"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/plussakartasans_medium"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_refer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_referandearn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/account_card"
                android:paddingTop="10dp"
                android:paddingStart="16dp"
                android:paddingBottom="13dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/gift_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_gift"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Refer &amp; earn Rs 100"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/plusjakartasans_bold"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Get Rs 100 when your friend completes their first booking"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:layout_constraintEnd_toStartOf="@id/gift_icon"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/plusjakartasans_semi_bold"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="#BA263238"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <com.hommlie.customfonts.Button_Medium
                    android:id="@+id/refer_button"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginTop="13dp"
                    android:text="Refer now"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/subtitle"
                    android:background="@drawable/bg_roundwhite5"
                    android:textColor="@color/white"
                    android:fontFamily="@font/plusjakartasans_semi_bold"
                    android:textAllCaps="false"
                    android:paddingStart="@dimen/_21sdp"
                    android:paddingEnd="@dimen/_21sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textSize="12sp"
                    android:backgroundTint="#249270"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <com.hommlie.customfonts.Button_Medium
        android:id="@+id/btncontinueshopping"
        style="@style/ClickableView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:text="More Sevices"
        android:textAllCaps="true"
        android:textAppearance="@style/PoppinsSemiBold"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1" />
</androidx.constraintlayout.widget.ConstraintLayout>