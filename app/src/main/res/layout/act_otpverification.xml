    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlToolBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_back"
            android:layout_marginStart="@dimen/_15sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/rlToolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Verify OTP"
            android:textColor="@color/color_2121212"
            android:textSize="@dimen/_20ssp"
            android:fontFamily="@font/sfprodisplay_medium"
            />




        <TextView
            android:id="@+id/txt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Enter the OTP sent to your mobile number"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/color808080"
            app:layout_constraintTop_toBottomOf="@+id/txt"
            android:fontFamily="@font/helvetica"
            android:layout_marginTop="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="(+91 7000473898)"
            android:fontFamily="@font/helvetica"
            android:textColor="@color/serviceHeadingcolor"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@+id/txt2"/>
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_mobile"
            android:text="to proceed."
            android:fontFamily="@font/helvetica"
            android:textColor="@color/color808080"
            android:textSize="@dimen/_12ssp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@+id/txt2"/>


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mobile"
            android:layout_marginTop="@dimen/_15sdp">

            <EditText
                android:id="@+id/otpDigit1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:layout_margin="@dimen/_4sdp"
                android:elevation="@dimen/_2sdp"
                android:background="@drawable/transparent_back_5sdp"
                android:backgroundTint="@color/serviceHeadingcolor"/>

            <EditText
                android:id="@+id/otpDigit2"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:elevation="@dimen/_2sdp"
                android:background="@drawable/transparent_back_5sdp"
                android:backgroundTint="@color/serviceHeadingcolor"/>

            <EditText
                android:id="@+id/otpDigit3"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:elevation="@dimen/_2sdp"
                android:background="@drawable/transparent_back_5sdp"
                android:backgroundTint="@color/serviceHeadingcolor"
                />

            <EditText
                android:id="@+id/otpDigit4"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:elevation="@dimen/_2sdp"
                android:background="@drawable/transparent_back_5sdp"
                android:backgroundTint="@color/serviceHeadingcolor"
                />

            <EditText
                android:id="@+id/otpDigit5"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:layout_margin="@dimen/_4sdp"
                android:elevation="@dimen/_2sdp"
                android:background="@drawable/transparent_back_5sdp"
                android:backgroundTint="@color/serviceHeadingcolor"
                />

            <EditText
                android:id="@+id/otpDigit6"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:layout_margin="@dimen/_4sdp"
                android:elevation="@dimen/_2sdp"
                android:background="@drawable/transparent_back_5sdp"
                android:backgroundTint="@color/serviceHeadingcolor"/>
        </LinearLayout>

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/serviceHeadingcolor"
                    app:layout_constraintEnd_toEndOf="@id/l1"
                    app:layout_constraintTop_toBottomOf="@id/l1"
                    android:fontFamily="@font/plusjakartasans_bold"

                    android:letterSpacing="0.3"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="visible" />

        <TextView
            android:id="@+id/tv_didnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plussakartasans_light"
            android:textColor="@color/color808080"
            app:layout_constraintTop_toBottomOf="@id/tv_refferal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone"
            android:text="Didnâ€™t Receive the Code?"/>

        <TextView
            android:id="@+id/tv_resendotp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plussakartasans_light"
            android:textColor="@color/color249370"
            app:layout_constraintTop_toBottomOf="@id/tv_refferal"
            app:layout_constraintStart_toEndOf="@id/tv_didnt"
            android:layout_marginStart="5dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/resend"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/l1"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Full Name  (required)"
            android:fontFamily="@font/plussakartasans_medium"
            app:layout_constraintStart_toStartOf="@id/tv_didnt"
            android:textColor="@color/color808080"/>

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="0dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toStartOf="@id/name"
            android:layout_marginTop="@dimen/_7sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/transparent_back_5sdp"
            android:backgroundTint="@color/serviceHeadingcolor"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:singleLine="true"
            android:hint="Enter your full name"
            android:fontFamily="@font/plusjakartasans_semi_bold"
            android:textSize="@dimen/_10ssp"
            android:inputType="textCapWords"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            />


        <TextView
            android:id="@+id/referal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edt_name"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/referral_code_optional"
            android:fontFamily="@font/plussakartasans_medium"
            app:layout_constraintStart_toStartOf="@id/tv_didnt"
            android:textColor="@color/color808080"/>
        
        <EditText
            android:id="@+id/tv_refferal"
            android:layout_width="0dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/referal"
            app:layout_constraintStart_toStartOf="@id/referal"
            android:layout_marginTop="@dimen/_7sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/transparent_back_5sdp"
            android:backgroundTint="@color/serviceHeadingcolor"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:singleLine="true"
            android:inputType="textCapCharacters"
            android:hint="@string/enter_referral_code"
            android:fontFamily="@font/plusjakartasans_semi_bold"
            android:textSize="@dimen/_10ssp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            />
        





        <androidx.cardview.widget.CardView
            android:id="@+id/btn_submitotp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/byagree"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_8sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_continue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_3sdp"
                >

                <TextView
                    android:id="@+id/txtcontinue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify OTP"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:letterSpacing="0.09"
                    android:fontFamily="@font/plusjakartasans_bold"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/byagree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cl1"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/by_giving_your_information_you_agree_to_our"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_termsandcondi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/terms_amp_contidions"
                android:textColor="@color/green"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_termsandcondi"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/and"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_privacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/and"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/privacy_policy"
                android:textColor="@color/green"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>