<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_height="wrap_content"
    android:background="@color/activityBgColor">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_margin="0.5dp"
        android:background="@null"
        app:cardCornerRadius="8dp"
        app:strokeWidth="0.4dp"
        app:strokeColor="@android:color/white"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/activityBgColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/activityBgColor">

            <!--
                        <de.hdodenhof.circleimageview.CircleImageView
            -->

            <ImageView
                android:id="@+id/ivCategories"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="@color/activityBgColor"
                android:scaleType="fitStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
<!--            android:layout_marginTop="-12dp"-->

            <com.hommlie.customfonts.MyTextView_Regular
                android:id="@+id/tvCategoriesName"
                android:visibility="gone"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:maxEms="10"
                android:maxLines="1"
                android:gravity="center"
                android:singleLine="true"
                android:textAlignment="center"
                android:text="Man T-shirt"
                android:textAllCaps="true"
                android:textSize="10sp"
                android:textAppearance="@style/PoppinsRegular"
                android:textColor="@color/Blackcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivCategories"
                android:background="@color/activityBgColor"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>