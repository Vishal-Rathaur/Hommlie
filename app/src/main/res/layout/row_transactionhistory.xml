<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvwalletName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/order_idd"
                android:textAlignment="viewStart"
                android:textAppearance="@style/PoppinsBold"
                android:textColor="@color/home_header"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@id/tvDeliveryprice"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvwalletdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8ssp"
                android:text="03 August 2021"
                android:textAlignment="viewStart"
                android:textAppearance="@style/PoppinsMedium"
                android:textColor="@color/medium_gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tvwalletName"
                app:layout_constraintEnd_toStartOf="@id/tvexprires"
                app:layout_constraintTop_toBottomOf="@id/tvwalletName"/>


            <TextView
                android:id="@+id/tvDeliveryprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10_00"
                android:textAlignment="viewStart"
                android:textAppearance="@style/PoppinsBold"
                android:textColor="@color/home_header"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvwalletName"
                />

    <TextView
        android:id="@+id/tvexprires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_10_00"
        android:textAlignment="viewStart"
        android:textAppearance="@style/PoppinsMedium"
        android:textColor="@color/home_header"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvwalletdate"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvwalletdate"
        android:layout_marginTop="@dimen/_11sdp"
        android:background="@drawable/dash_rectangle"/>


</androidx.constraintlayout.widget.ConstraintLayout>