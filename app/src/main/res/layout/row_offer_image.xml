<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/_8sdp"
    android:background="@color/activityBgColor">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_offerimage"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_offer_coupon"
        android:backgroundTint="#E3EBF8">
        <ImageView
            android:id="@+id/iv_offerimage"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_join"/>
        <TextView
            android:id="@+id/tv_offer_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/plusjakartasans_semi_bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"
            android:text="Join premium club and Save 10% Off on every service @199"
            app:layout_constraintStart_toEndOf="@id/iv_offerimage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>