<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="105dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/rightdesign2"
        android:visibility="gone"
        android:tint="@color/purple_primary"/>

    <ImageView
        android:layout_width="59dp"
        android:layout_height="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="@color/purple_primary"
        android:visibility="gone"
        android:src="@drawable/rightdesign"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/_7sdp">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="202dp"
            android:layout_height="62dp"
            app:layout_constraintBottom_toTopOf="@id/mobile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            android:src="@drawable/hommlie_logo"
            android:layout_marginBottom="@dimen/_130sdp"
            android:layout_marginTop="60dp"/>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:layout_marginTop="50dp"
            android:weightSum="3"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/g1"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/g2"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/g3"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/l1"
            android:layout_marginTop="1dp"
            android:weightSum="3"
            android:visibility="gone"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/g6"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/g4"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/g5"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_loginanimation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.50"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/login_image"
            android:scaleType="fitXY"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/iv_loginanimation"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bg_top_round_shape"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Xpress 4hours service delivery"
            android:textColor="@color/color_2121212"
            android:textSize="@dimen/_20ssp"
            android:fontFamily="@font/sfprodisplay_medium"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/iv_loginanimation"
            android:layout_marginBottom="0dp"/>


        <View
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            app:layout_constraintTop_toTopOf="@id/mobile"
            app:layout_constraintBottom_toBottomOf="@id/mobile"
            app:layout_constraintEnd_toStartOf="@id/mobile"
            app:layout_constraintStart_toStartOf="@id/card_mobile"
            android:background="@color/gray_line_color"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_7sdp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            app:layout_constraintTop_toTopOf="@id/mobile"
            app:layout_constraintBottom_toBottomOf="@id/mobile"
            app:layout_constraintStart_toEndOf="@id/mobile"
            app:layout_constraintEnd_toEndOf="@id/card_mobile"
            android:background="@color/gray_line_color"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_7sdp"/>

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Log in or sign up"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/sfprodisplay_medium"
            android:layout_marginTop="0dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/card_mobile"
            android:layout_marginBottom="@dimen/_25sdp"/>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_getOtp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:cardElevation="0dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="@color/gray_line_color"
            app:cardCornerRadius="@dimen/_8sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_getOtp"
            >

            <ImageView
                android:id="@+id/imv_flag"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:src="@drawable/ic_indflag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tv_countrycode"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imv_flag"
                android:gravity="center"
                android:hint="+91"
                android:textSize="@dimen/_15ssp"/>

            <EditText
                android:id="@+id/edt_mobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/tv_countrycode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="@color/white"
                android:hint="XXX-XXXX-XXX"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                android:inputType="phone"
                android:maxLength="10"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_getOtp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/byagree"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_8sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_continue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/txtcontinue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get OTP"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/_12ssp"
                    android:textAlignment="center"
                    android:fontFamily="@font/sfprodisplay_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/byagree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cl1"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="By giving your information, you agree to our"
            android:textSize="@dimen/_11ssp"
            android:gravity="center"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_termsandcondi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Terms &amp; Contidions"
                android:textColor="@color/green"
                android:textSize="@dimen/_11ssp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_termsandcondi"
                app:layout_constraintTop_toTopOf="parent"
                android:text="and"
                android:textSize="@dimen/_11ssp"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_privacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/and"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Privacy Policy"
                android:textColor="@color/green"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_11ssp"
                android:gravity="center"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingStart="@dimen/_13sdp"
        android:paddingEnd="@dimen/_13sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Skip"
        android:fontFamily="@font/plusjakartasans_semi_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_9ssp"
        android:background="@drawable/transparent_back_5sdp"
        android:backgroundTint="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>