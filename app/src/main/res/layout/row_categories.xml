<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="2dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/_10sdp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:cardCornerRadius="8dp"
        app:strokeWidth="0.4dp"
        app:strokeColor="@android:color/white"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!--
                        <de.hdodenhof.circleimageview.CircleImageView
            -->

            <ImageView
                android:id="@+id/ivCategories"
                android:layout_width="80dp"
                android:layout_height="83dp"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCategoriesName"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:maxLines="2"
                android:lines="2"
                android:gravity="center_horizontal"
                android:text="Man T-shirt"
                android:textSize="14sp"
                android:fontFamily="@font/sfprodisplay_medium"
                android:textColor="@color/home_header"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/ivCategories"
                app:layout_constraintStart_toStartOf="@id/ivCategories"
                app:layout_constraintTop_toBottomOf="@id/ivCategories" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>