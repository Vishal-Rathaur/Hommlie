<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_148sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_2sdp"
        app:strokeWidth="0.5dp"
        app:strokeColor="@color/serviceHeadingcolor"
        android:layout_marginBottom="@dimen/_3sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"
            android:background="@color/white"
            android:orientation="vertical">
<!--            android:background="@drawable/transparent_back_5sdp"-->
<!--            android:backgroundTint="@color/color249370"-->




            <ImageView
                android:id="@+id/iv_rating"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_location"
                app:layout_constraintStart_toStartOf="@id/iv_image"
                android:src="@drawable/ratting5"
                android:tint="@color/status_color"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_2sdp"/>
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/plusjkartasans_regular"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/color_2121212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_rating"
        android:layout_marginBottom="@dimen/_5sdp"

        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text=""/>
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/placeholder"
        />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="@id/iv_image"
                app:layout_constraintEnd_toEndOf="@id/iv_image"
                android:src="@drawable/ic_google"
                android:padding="@dimen/_2sdp"
                android:background="@drawable/circular_background"
                android:backgroundTint="@color/white"
                />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/plussakartasans_medium"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/serviceHeadingcolor"
        app:layout_constraintStart_toEndOf="@id/iv_image"
        app:layout_constraintTop_toTopOf="@id/iv_image"
        android:layout_marginStart="@dimen/_10sdp"
        android:text=""
        android:singleLine="true"
        android:maxWidth="@dimen/_70sdp"
        />

            <ImageView
                android:layout_width="@dimen/_9sdp"
                android:layout_height="@dimen/_9sdp"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                app:layout_constraintStart_toEndOf="@id/tv_name"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/verify_icon"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:fontFamily="@font/plusjkartasans_regular"
        android:textSize="@dimen/_9ssp"
        android:textColor="@color/color_565A5B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:text=""/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>