<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ikksa" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="DefaultPayTheme" parent="Theme.Ikksa">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="OTPButtonStyle">@style/otpBtnStyle</item>
        <item name="PayButtonStyle">@style/payBtnStyle</item>
        <item name="PinButtonStyle">@style/pinButtonStyle</item>
        <item name="OTPHeaderStyle">@style/otpHeaderStyle</item>
        <item name="TabLayoutStyle">@style/tabLayoutStyle</item>
        <item name="PinHeaderStyle">@style/pinHeaderStyle</item>
        <item name="SavedCardButtonStyle">@style/svdCardsBtnStyle</item>
    </style>

    <style name="Theme.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/purple_primary</item>
    </style>

    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="Theme.MyCustomTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Ensure the app layout is not drawn under the status bar -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:fitsSystemWindows">true</item>
<!--        <item name="android:forceDarkAllowed">false</item>-->
        <item name="android:statusBarColor">@color/purple_primary</item>

<!--        &lt;!&ndash; Ensure status bar icons are visible based on the mode &ndash;&gt;-->
<!--        <item name="android:windowLightStatusBar">false</item>-->
    </style>

    <style name="ActMainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:forceDarkAllowed">false</item>-->
    </style>



    <style name="CollapsingTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Make the status bar fully transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="BottomRoundedCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/BottomRoundedShape</item>
    </style>

    <style name="BottomRoundedShape">
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>




    <style name="PoppinsMedium">
        <item name="fontPath">fonts/plussakartasans_medium.ttf</item>
    </style>

    <style name="PoppinsLight">
        <item name="fontPath">fonts/plussakartasans_light.ttf</item>
    </style>

    <style name="PoppinsRegular">
        <item name="fontPath">fonts/plusjkartasans_regular.ttf</item>
    </style>

    <style name="PoppinsSemiBold">
        <item name="fontPath">fonts/plusjakartasans_semi_bold.ttf</item>
    </style>


    <style name="PoppinsBold">
        <item name="fontPath">fonts/plusjakartasans_bold.ttf</item>
    </style>

    <style name="ClickableView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>


    <style name="AppCompatAlertDialogStyleBig" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowAnimationStyle">@style/AnimationDialogWindow</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="AnimationDialogWindow">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="logout_button">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:background">@drawable/bg_select_btn</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontPath">@string/font_regular</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dlg</item>
    </style>

    <style name="plusjakartasans_bold">
        <item name="android:fontFamily">@font/plusjakartasans_bold</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="plusjakartasans_semi_bold">
        <item name="android:fontFamily">@font/plusjakartasans_semi_bold</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="plussakartasans_medium">
        <item name="android:fontFamily">@font/plussakartasans_medium</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <style name="plussakartasans_light">
        <item name="android:fontFamily">@font/plussakartasans_light</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="plusjkartasans_regular">
        <item name="android:fontFamily">@font/plusjkartasans_regular</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <style name="plusjkartasans_forhome_icon">
        <item name="android:fontFamily">@font/plusjakartasans_bold</item>
        <item name="android:lineHeight">13dp</item>

    </style>

    <!-- res/values/styles.xml -->
    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <!-- The color when the RatingBar is clicked or activated -->
        <item name="colorControlActivated">#FFD700</item> <!-- Yellow color for activated state -->

        <!-- The color of stars when they're not activated (default state) -->
        <item name="colorControlNormal">@color/medium_gray</item> <!-- Gray color for unfilled stars -->

        <!-- Optional, ensure the progress (filled stars) has the yellow color -->
        <item name="android:progressTint">#FFD700</item> <!-- Yellow for progress stars -->

    </style>



    <style name="TransparentBottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>





</resources>